<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/verde_100"
    android:textAlignment="center">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/degradado_toolbar"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#fff" />

    <TextView
        android:id="@+id/productoTextView"
        android:layout_width="110dp"
        android:layout_height="34dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:text="Producto"
        android:textAlignment="viewStart"
        android:textColor="#B2000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4" />

    <Spinner
        android:id="@+id/sp_promocion_producto"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toEndOf="@+id/productoTextView"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4" />

    <TextView
        android:id="@+id/tippromocionTextView"
        android:layout_width="135dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:text="Tipo de Promoción"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productoTextView" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="144dp"
        android:layout_height="42dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tippromocionTextView"
        app:layout_constraintTop_toBottomOf="@+id/sp_promocion_producto" />

    <TextView
        android:id="@+id/fechapromocionTextView"
        android:layout_width="162dp"
        android:layout_height="36dp"
        android:layout_marginTop="56dp"
        android:text="Fecha de Promoción"
        android:textAlignment="gravity"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tippromocionTextView" />

    <TextView
        android:id="@+id/iniciofechaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="De"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fechapromocionTextView" />

    <TextView
        android:id="@+id/printfechainiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="DD/MM/AA"
        app:layout_constraintStart_toEndOf="@+id/iniciofechaTextView"
        app:layout_constraintTop_toBottomOf="@+id/fechapromocionTextView" />

    <TextView
        android:id="@+id/finfechaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="116dp"
        android:text="Hasta"
        app:layout_constraintStart_toEndOf="@+id/printfechainiTextView"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <TextView
        android:id="@+id/printfechafinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="DD/MM/AA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/finfechaTextView"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <TextView
        android:id="@+id/printfechafinTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="DD/MM/AA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/finfechaTextView"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <ImageView
        android:id="@+id/iniciocalendarioImageView"
        android:layout_width="39dp"
        android:layout_height="30dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="8dp"
        android:onClick="inifecha_boton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/printfechainiTextView"
        app:srcCompat="@mipmap/iconocalendario" />

    <ImageView
        android:id="@+id/fincalendarioImageView"
        android:layout_width="39dp"
        android:layout_height="34dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="8dp"
        android:onClick="finfecha_boton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toEndOf="@+id/iniciocalendarioImageView"
        app:layout_constraintTop_toBottomOf="@+id/finfechaTextView"
        app:srcCompat="@mipmap/iconocalendario" />

    <TextView
        android:id="@+id/stocktextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Stock"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iniciocalendarioImageView" />

    <TextView
        android:id="@+id/stocktextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruta de la imagen"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/promocionarButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stocktextView" />

    <EditText
        android:id="@+id/stockTextNumber"
        android:layout_width="87dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toEndOf="@+id/stocktextView"
        app:layout_constraintTop_toBottomOf="@+id/printfechainiTextView" />

    <EditText
        android:id="@+id/imagenTextRuta"
        android:layout_width="183dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/promocionarButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/stocktextView2"
        app:layout_constraintTop_toBottomOf="@+id/stockTextNumber"
        app:layout_constraintVertical_bias="0.444" />

    <Button
        android:id="@+id/promocionarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:backgroundTint="#050505"
        android:text="Promocionar"
        android:textColor="#EDE7E7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stockTextNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>