<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_fmyestadisticas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            android:layout_gravity="center"
            >

            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_promocion_producto"
                android:layout_width="295dp"
                android:layout_height="85dp"
                android:text="PROMOCIÓN"
                android:textColor="@color/white"
                android:background="@drawable/boton_redondo"
                android:textSize="24sp"></Button>

            <Button
                android:layout_gravity="center"
                android:layout_marginTop="250px"
                android:id="@+id/btn_est_mapacalor"
                android:layout_width="295dp"
                android:layout_height="85dp"
                android:text="MAPA DE CALOR"
                android:textColor="@color/white"
                android:background="@drawable/boton_redondo"
                android:textSize="24sp"></Button>

            <Button
                android:layout_gravity="center"
                android:layout_marginTop="250px"
                android:id="@+id/btn_est_masvendidocategoria"
                android:layout_width="295dp"
                android:layout_height="85dp"
                android:text="ESTADÍSTICAS"
                android:textColor="@color/white"
                android:background="@drawable/boton_redondo"
                android:textSize="24sp"></Button>
        </LinearLayout>
    </ScrollView>
</FrameLayout>